<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.systemshub</groupId>
  <artifactId>mavenproject</artifactId>
  <packaging>war</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>test</name>
  <url>http://maven.apache.org</url>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
<build>
 <plugins>
 <plugin>
          <groupId>org.apache.maven.plugins</groupId>
         <artifactId>maven-war-plugin</artifactId>
 <configuration>
         <outputDirectory>/mnt</outputDirectory>
  </configuration>
  </plugin>
   <finalName>sureshmaven</finalName>


<plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1.5</version>

                <configuration>
                    <disabled>false</disabled>

                    <name>ts-ecommerce</name>
                    <version>1234</version>
                    <release>9999</release>
                    <group>business services</group>
                    <summary>sureshmaven.war</summary>
                    <description>Ecommerce Project</description>
                    <vendor>Twinspires</vendor>
                    <defaultDirmode>755</defaultDirmode>
                    <defaultFilemode>644</defaultFilemode>
                    <defaultUsername>tomcat</defaultUsername>
                    <defaultGroupname>tomcat</defaultGroupname>
                    <targetOS>linux</targetOS>

                    <mappings>
                        <mapping>
                            <directoryIncluded>false</directoryIncluded>
                            <directory>/mnt</directory>
                            <sources>
                                <source>
                                    <location>./target/sureshmaven.war</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>

                </configuration>
</plugin>
 </plugins>
  </build>

</project>
